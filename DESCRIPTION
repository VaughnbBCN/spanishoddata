Package: spanishoddata
Title: Get Spanish Origin-Destination Data
Version: 0.0.1
Authors@R: c(
    person("Egor", "Kotov", , "kotov.egor@gmail.com", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0001-6690-5345")),
